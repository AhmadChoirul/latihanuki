<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:id="@+id/todoItem"
    android:background="@color/white"
    android:layout_marginBottom="5dp">
<LinearLayout
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp">
    <TextView
        android:id="@+id/titleTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pergi Mancing"
        android:textSize="18sp"
        android:textColor="#101212"
        />
    <TextView
        android:id="@+id/descTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memancing Harus dapat Hiu......"
        android:textSize="12dp"
        android:textColor="#00BCD4"
        android:layout_marginTop="8dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dateTodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="03-08-2021"
            android:textSize="12dp"
            android:textColor="#121111"
            android:layout_gravity="center"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>